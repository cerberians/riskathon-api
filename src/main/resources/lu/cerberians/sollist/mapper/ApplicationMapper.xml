<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lu.cerberians.sollist.mapper.ApplicationMapper">

    <resultMap id="applicationMap" type="lu.cerberians.sollist.entities.Application">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="assets" ofType="lu.cerberians.sollist.entities.Asset">
            <result property="id" column="assetId"/>
            <result property="name" column="assetName"/>
        </collection>
    </resultMap>

    <select id="selectAll" resultMap="applicationMap">
        MATCH (app:Application)-[:HAS_ASSET]->(asset:Asset)
        RETURN app.id as id,
                app.name as name,
                asset.id as assetId,
                asset.name as assetName
    </select>

</mapper>